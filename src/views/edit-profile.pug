extends base
    
block content 
    form(method="POST", enctype="multipart/form-data").edit-profile__form
        label(for="avatar") Avatar
        input(type="file", id="avatar", name="avatar", accept="image/*")
        input(placeholder="email", name="email", type="email", required, value=leggedInUser.email)
        input(placeholder="Name", name="name", type="text", required, value=leggedInUser.name) 
        input(placeholder="Username",name="username", type="text", required, value=leggedInUser.username) 
        input(placeholder="Location", name="location", type="text", required, value=leggedInUser.location)
        input(type="submit", value="Update")
        if !leggedInUser.socialOnly
            div.edit-profile__password
            a(href="change-password") Change Password &rarr;